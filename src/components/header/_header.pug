      div(class="header__navLinks")
        
        ul.nav.col-lg-auto.me-lg-auto.mb-md-0.d-none.d-lg-block
         each val,index in ulList
          li 
           a(href="#" class=`${index===0?'bg-tfYllow':''}  px-3 link-dark roboto-font f-600 color-tfNavy`)= val
                       
      .header__hamburger.d-lg-block.d-lg-none
        .hamburger.hamburger--squeeze(js-hamburger)
          .hamburger-box
            .hamburger-inner

